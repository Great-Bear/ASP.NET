@model Shop.Models.Users

    @{
        ViewData["Title"] = "Edit";
    }

    <h1>Edit</h1>
    <h4>User</h4>
    <form action="EditRole" controller="Account" method="post">
        <input type="text" name="IdUser" value="@Model.Id" hidden />
        <select class="form-control" name="Role">
            @foreach (var item in ViewBag.List)
            {
                if (item.Id == @Model.RoleId)
                {
                    <option selected>@item.Name</option>
                }
                else
                {
                    <option>@item.Name</option>
                }
            }
        </select>
        <label style="font-size:large" for="State">State: </label>
        <!--<input type="checkbox" name="stateAccount" checked="@Model.State" class="form-control" style="width:22px; height:22px;" />
        -->
        <input type="checkbox" name="stateAccount" asp-for="@Model.State" class="form-control" style="width:22px; height:22px;" />
        <br />
        <button type="submit">Save</button>
    </form>

    <div>
        <a asp-action="Users" asp-controller="Admin">Back to list user</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
