@model Shop.Models.Goods

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Goods</h4>
    <hr />
    <img id="ImgDetails" src="@Model.Picture"/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Describe)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Describe)
        </dd>
        <dt class="col-sm-2">
            Type
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
</div>
<div>
    <!-- <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |-->
    @if (ViewBag.FromBasket == false)
    {
        <a asp-action="ListGoods">Back to List</a>
    }

    @if (ViewBag.FromBasket == true)
    {
        <a asp-action="Basket" asp-controller="Basket">Back to Basket</a>
    }
</div>
