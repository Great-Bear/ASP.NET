@model IEnumerable<Shop.Models.Order>

@{
    ViewData["Title"] = "Orders list";
}

<div id="ProductList">
    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            <div>
                <img src="@item.Good.Picture" />
                <p class="nameProd">@item.Good.Name</p>
                <span class="typeProd">@item.Good.Type</span>
                <p class="price">@item.Good.Price</p>

                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                @if (ViewBag?.IdCurrUser == item.UserId)
                {
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit |</a>
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                }
                @if (ViewBag?.IdCurrUser != item.UserId)
                {
                    <a asp-action="Buy" asp-route-id="@item.ID">Buy</a>
                }
            </div>
        }
    }
    @if (Model.Any() == false)
    {
        <img id="NoResult" src="~/Imgs/SadSmile.png" />
        <p id="NoResulText">No result</p>
    }
</div>


